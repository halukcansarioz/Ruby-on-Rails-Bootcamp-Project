<h1>First Photos of Albums</h1>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Album ID</th>
      <th>Title</th>
      <th>First Photo</th>
    </tr>
  </thead>
  <tbody>
    <% @first_photos.each do |album_id, first_photo| %>
      <% if first_photo.present? %>
        <tr>
          <td><%= first_photo.id %></td>
          <td><%= album_id %></td>
          <td><%= first_photo.title %></td>
          <td><%= image_tag first_photo.thumbnailUrl %></td>
        </tr>
      <% else %>
        <tr>
          <td><%= album_id %></td>
          <td>No photo found</td>
          <td></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
